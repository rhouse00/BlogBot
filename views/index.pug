doctype html
html
    head
        title= `${title}`
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(charser='utf8')
        link(rel='stylesheet', href='/dist/style.css')
    body
        block header
            .header
                .nav
                    each item in h.siteNavMenu
                        li
                            a(href=item.route)
                                span #{item.title}
                .account
        block content
            p this is the default but will be overridden
        block footer
            p Footy mcFooterFace
        block scripts
            script(src='/dist/App.bundle.js')
