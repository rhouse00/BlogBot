mixin postList(post ={})
   td.post_title
      p= post.title
   td.post_body
      if post.content.length > 40
         p= post.content.substr(0,40) + '...'
      else if post.content.length <= 40
        p= post.content
   td.post_author
      p= post.author.name
   td.post_date
      p= h.moment(post.created).format("dddd, MMMM Do YYYY, h:mm:ss a")
   td.edit
      a(href=`/admin/posts/${post._id}`) Edit