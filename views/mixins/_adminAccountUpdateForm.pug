mixin adminAccountUpdateForm(user = {})
      form.form(action=`/admin/accounts/edit/${user._id}` method='POST')
            h2 Update / Edit User
            label(for='name') Name
            input(type='text' name='name' value=user.name)
            label(for='email') Email Address
            input(type='email' name='email' value=user.email)